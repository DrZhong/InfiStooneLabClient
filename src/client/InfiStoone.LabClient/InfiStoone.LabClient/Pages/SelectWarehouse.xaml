<hc:Window x:Class="InfiStoone.LabClient.Pages.SelectWarehouse"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            Background="{StaticResource BorderBrush}" 
        Style="{StaticResource WindowWin10}"
        xmlns:local="clr-namespace:InfiStoone.LabClient.Pages"
        mc:Ignorable="d"
        Title="选择所属仓库" Height="400" Width="600">

    <StackPanel>
        <TextBlock Style="{StaticResource TextBlockLarge}" Text="选择所属仓库" Margin="0,30"></TextBlock>
        <ComboBox Name="SelectBtn" Width="300"   hc:InfoElement.Placeholder="请选择仓库"  Height="50" FontSize="30"  hc:DropDownElement.ConsistentWidth="False"  />
        <Button Name="Save" Click="Save_Click" Content="确定选择" Width="300" Height="60" FontSize="30" Style="{StaticResource ButtonPrimary}" Margin="0,20"></Button>
    </StackPanel>
</hc:Window>
